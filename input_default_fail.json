{
  "environment": "pr_validation",
  "ref": "refs/heads/main",
  "repo_environments": [
    "pr_validation"
  ],
  "workflow_meta": {
    "ticket_refs": [],
    "approvers": [],
    "checks": {
      "tests": null
    },
    "signed_off": false,
    "deployments_today": 0,
    "labels": [],
    "is_draft": false
  },
  "repo_policy": {
    "policy": {
      "version": "1.0",
      "environments": {
        "pr_validation": {
          "enabled": true,
          "require_repo_environment": true,
          "rules": {
            "allowed_branches": [
              "main",
              "feature/*",
              "bugfix/*"
            ],
            "approvals_required": 1,
            "signed_off": true
          }
        },
        "development": {
          "enabled": true,
          "require_repo_environment": false,
          "rules": {
            "allowed_branches": [
              "develop",
              "feature/*"
            ],
            "approvals_required": 1,
            "signed_off": false
          }
        },
        "staging": {
          "enabled": true,
          "require_repo_environment": false,
          "rules": {
            "allowed_branches": [
              "release/*",
              "hotfix/*"
            ],
            "approvals_required": 2,
            "signed_off": true
          }
        },
        "production": {
          "enabled": true,
          "require_repo_environment": false,
          "rules": {
            "allowed_branches": [
              "main",
              "hotfix/*"
            ],
            "approvals_required": 2,
            "signed_off": true
          }
        }
      }
    }
  },
  "is_default_pr": true
}
